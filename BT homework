    <!-- 导航栏背景色变化效果的JavaScript代码 -->
    <script>
        window.addEventListener('scroll', function() {
            if (window.scrollY > 100) {
                document.querySelector('.navbar').classList.add('fixed-top');
            } else {
                document.querySelector('.navbar').classList.remove('fixed-top');
            }
        });
    </script>
